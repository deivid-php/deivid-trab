<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bsbwebsites.deivid.filarapidahospital.ActivityCadCasa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirme cadastro da instituição"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittextinstit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome da Instituição"
            android:inputType="textPersonName"/>
        <EditText
            android:id="@+id/edittextemailinst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="textEmailAddress"/>
        <EditText
            android:id="@+id/edittexttelinst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone"
            android:inputType="phone"/>

        <Button
            android:id="@+id/enviarfirebase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="enviarfirebase"
            android:background="@color/bootstrap_brand_success"
            android:text="ENVIAR" />



        <ListView
            android:id="@+id/list_instituicoes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
